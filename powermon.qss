{
    border: 2px solid black;
    background-color: lightgrey;
    text-align: right;
}

QProgressBar::chunk
{
    background-color: green;
}*/

QMessageBox
{
    background-color: rgb(70, 130, 180);
}


QFrame#frameMenu
{
    background: rgb(70, 130, 180);
    border: 2px solid;
    border-color: rgb(0, 216, 230);
    border-radius: 5px;
}

QFrame#frame
{
    background-color: rgb(70, 130, 180);
}

QPushButton#bStart
{
    width: 50px;
    height: 50px;
    background-color: transparent;
    border: none;
    image: url(:zrm/icons/start_pressed.png);
}

QLineEdit#methodLabel,
QLineEdit#stateLabel,
QLineEdit#errorLabel
{
  background-color : transparent;
  border : none;
}

QToolButton#tempButton
{
  border : none;
}

QPushButton#bStart[start = "false"]
{
    image: url(:zrm/icons/start.png);
}

QPushButton#bStart[start = "true"]
{
    image: url(:zrm/icons/start_pressed.png);
}

QPushButton#bPause
{
    width: 50px;
    height: 50px;
    background-color: transparent;
    border: none;
    image: url(:zrm/icons/pause_pressed.png);
}

QPushButton#bPause[pause = "false"]
{
    image: url(:zrm/icons/pause.png);
}

QPushButton#bPause[pause = "true"]
{
    image: url(:zrm/icons/pause_pressed.png);
}

QPushButton#bStop
{
    width: 50px;
    height: 50px;
    background-color: transparent;
    border: none;
    image: url(:zrm/icons/stop_pressed.png);
}

QPushButton#bStop[stop = "false"]
{
    image: url(:zrm/icons/stop.png);
}

QPushButton#bStop[stop = "true"]
{
    image: url(:zrm/icons/stop_pressed.png);
}

QPushButton#bResetError
{
    background-color: transparent;
    border: none;
    image: url(:zrm/icons/reset_error.png);
}

QPushButton#bResetError:pressed
{
    image: url(:zrm/icons/reset_error_pressed.png);
}

QToolButton#tbCharge, #tbDischarge, #tbImpulse, #tbPause, #tbStageAdd, #tbStageRemove, #tbStageMoveDown, #tbStageMoveUp, #tbLinkMethod
{
    background-color: lightblue;
}

QToolButton:hover#tbCharge,
QToolButton:hover#tbDischarge,
QToolButton:hover#tbImpulse,
QToolButton:hover#tbPause,
QToolButton:hover#tbStageAdd,
QToolButton:hover#tbStageRemove,
QToolButton:hover#tbStageMoveDown,
QToolButton:hover#tbStageMoveUp,
QToolButton:hover#tbLinkMethod
{
    background-color: rgb(176, 196, 222);
    color: yellow
}

QToolButton:checked#tbCharge,
QToolButton:checked#tbDischarge,
QToolButton:checked#tbImpulse,
QToolButton:checked#tbPause,
QToolButton:checked#tbStageAdd,
QToolButton:checked#tbStageRemove,
QToolButton:checked#tbStageMoveDown,
QToolButton:checked#tbStageMoveUp,
QToolButton:checked#tbLinkMethod
{
    background-color: rgb(30, 144, 255);
    color: white
}

QToolButton:disabled#tbCharge,
QToolButton:disabled#tbDischarge,
QToolButton:disabled#tbImpulse,
QToolButton:disabled#tbPause,
QToolButton:disabled#tbStageAdd,
QToolButton:disabled#tbStageRemove,
QToolButton:disabled#tbStageMoveDown,
QToolButton:disabled#tbStageMoveUp,
QToolButton:disabled#tbLinkMethod
{
    background-color: grey;
    color: white
}

QToolButton#buttonReadyView[error-state = "blue"]
{
    background-color: rgb(70, 130, 180);
    color: white;
    border: 2px solid black;
    border-radius: 10px;
    /*
    min-height: 30px;
    min-width: 30px;
    max-height: 30px;
    max-width: 30px;
    */
}

QToolButton:hover#buttonReadyView[error-state = "blue"]
{
    background-color: rgb(176, 196, 222);
}

QToolButton:checked#buttonReadyView[error-state = "blue"]
{
    background-color: rgb(30, 144, 255);
}

QToolButton#buttonReadyView[error-state = "red"]
{
    background-color: rgb(255, 0, 0);
    color: white;
    border: 2px solid black;
    border-radius: 10px;
}

QToolButton:hover#buttonReadyView[error-state = "red"]
{
    background-color: rgb(250, 128, 114);
}

QToolButton:checked#buttonReadyView[error-state = "red"]
{
    background-color: rgb(255, 30, 130);
}

QToolButton#buttonReadyView[error-state = "yellow"]
{
    background-color: rgb(255, 255, 0);
    color: white;
    border: 2px solid black;
    border-radius: 10px;
    /*min-height: 35px;*/
}

QToolButton:hover#buttonReadyView[error-state = "yellow"]
{
    background-color: rgb(240, 230, 140);
}

QToolButton:checked#buttonReadyView[error-state = "yellow"]
{
    background-color: rgb(255, 150, 20);
}

QToolButton#buttonReadyView[error-state = "green"]
{
    background-color: rgb(0, 255, 0);
    color: white;
    border: 2px solid black;
    border-radius: 10px;
    /*min-height: 35px;*/
}

QToolButton:hover#buttonReadyView[error-state = "green"]
{
    background-color: rgb(0, 255, 127);
}

QToolButton:checked#buttonReadyView[error-state = "green"]
{
    background-color: rgb(60, 128, 60);
}

