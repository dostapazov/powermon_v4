QWidget
{
    color: white;
    background: transparent;
}

QMainWindow
{
    background-image: url(:icons/icons/background.png);
}

QLabel
{
    color: white;
}

QGroupBox
{
    background-color: rgb(70, 130, 180);
    border: 1px solid black;
    border-radius: 5px;

    margin-top: 0.4em;
    padding: 0.4em 1px 1px 1px;
}

QGroupBox::title
{
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 1px;
    border: 1px solid black;
    border-radius: 3px;
    background-color: rgb(135, 206, 235);
}


QPushButton,
QToolButton
{
    background-color: rgb(70, 130, 180);
    color: white;
    border: 2px solid black;
    border-radius: 5px;
    min-height: 25px;
}

QPushButton:hover,
QToolButton:hover
{
    background-color: rgb(176, 196, 222);
    color: yellow
}

QPushButton:checked,
QToolButton:checked
{
    background-color: rgb(30, 144, 255);
    color: white
}

QPushButton:disabled,
QToolButton:disabled
{
    background-color: grey;
    color: white
}

QRadioButton,
QCheckBox
{
    border: none;
    background-color: rgb(70, 130, 180);
    color: white;
}

/*QRadioButton::indicator
{
    background-color: white;
}*/

QCheckBox::indicator
{
    width: 24px;
    height: 24px;
}

QCheckBox::indicator:checked
{
    image: url(:/icons/icons/checkbox_checked_focus.png);
}

QCheckBox::indicator:unchecked
{
    image: url(:/icons/icons/checkbox_unchecked_disabled.png);
}

QHeaderView
{
    background-color: white;
    color: black;
    font-weight: bold;
}

QTreeWidget, QTextEdit, QTextViewer, QTableView
{
    background-color: lightgray;
    selection-background-color: steelblue;
    color: black;
}

QTabWidget
{
    background-color: rgb(70, 130, 180);
    color: black;
    margin: 0;
    padding: 0;
}

QTabWidget::pane
{
    border: 2px solid black;
    border-radius: 10px;
    background-color: rgb(70, 130, 180);
    margin: 0px;
    padding: 0px;
}

QTabWidget::tab-bar
{
    left: 5px;
}

QTabBar::tab
{
    padding: 4px;
    color: blak;
    font-weight: bold;
    border: 1px solid black;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    background-color: lightgray;
}

QTabBar::tab:selected
{
    background-color: white;
}

QLineEdit
{
    background-color: white;
    color: black;
    border: 2px solid black;
    /*border-radius: 10px;*/
    min-height: 25px;
}


QLineEdit:read-only
{
    background-color: gray;
}

QSpinBox,
QDoubleSpinBox,
QDateEdit
{
    padding-right: 15px; /* создаем место для стрелок */
    border: 2px solid black;
    /*border-radius: 10px;*/
    background-color: white;
    color: black;
    min-height: 25px;
}

QSpinBox::up-button,
QDoubleSpinBox::up-button
{
    subcontrol-position: top right;
}

QSpinBox::down-button,
QDoubleSpinBox::down-button
{
    subcontrol-position: bottom right;
}

QSpinBox:!enabled,
QDoubleSpinBox:!enabled
{
    background-color: gray;
}

QComboBox
{
    border: 2px solid black;
    min-height: 25px;
    background-color: white;
    color: black;
}

QComboBox QAbstractItemView
{
    background-color: white;
    color: black;
}

QCalendarWidget QWidget#qt_calendar_navigationbar
{
    background-color: rgb(70, 130, 180);
}

QScrollBar:horizontal
{
    height: 20px;
}

QScrollBar:vertical
{
    width: 20px;
}

